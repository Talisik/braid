{
  "name": "braid-video-downloader",
  "version": "1.0.2",
  "description": "A powerful TypeScript library for downloading videos from web pages, including M3U8/HLS streams, with browser automation and intelligent stream detection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "braid": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json",
    "ELECTRON.md"
  ],
  "keywords": [
    "video-downloader",
    "m3u8",
    "hls",
    "stream-downloader",
    "web-scraping",
    "video-processing",
    "playwright",
    "browser-automation",
    "typescript",
    "ffmpeg",
    "video-streaming",
    "electron"
  ],
  "author": "7Gen",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "codegen": "playwright codegen",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "postinstall": "playwright install firefox"
  },
  "dependencies": {
    "@renmu/m3u8-downloader": "^0.4.0",
    "axios": "^1.7.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "ffmpeg-static": "^5.2.0",
    "m3u8-parser": "^7.2.0",
    "playwright": "^1.55.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
